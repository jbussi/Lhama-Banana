{
  "kind": "collectionType",
  "collectionName": "nome_produto",
  "info": {
    "singularName": "nome-produto",
    "pluralName": "nome-produtos",
    "displayName": "Nome do Produto",
    "description": "Nomes e descrições base dos produtos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100
    },
    "descricao": {
      "type": "text"
    },
    "descricao_curta": {
      "type": "string",
      "maxLength": 255
    },
    "categoria": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::categoria.categoria"
    },
    "ativo": {
      "type": "boolean",
      "default": true
    },
    "destaque": {
      "type": "boolean",
      "default": false
    },
    "ordem_exibicao": {
      "type": "integer",
      "default": 0
    },
    "meta_title": {
      "type": "string",
      "maxLength": 255
    },
    "meta_description": {
      "type": "text"
    },
    "slug": {
      "type": "string",
      "unique": true,
      "maxLength": 255
    }
  }
}

