{
  "kind": "collectionType",
  "collectionName": "categorias",
  "info": {
    "singularName": "categoria",
    "pluralName": "categorias",
    "displayName": "Categoria",
    "description": "Categorias de produtos e estampas"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50
    },
    "descricao": {
      "type": "text"
    },
    "tipo": {
      "type": "enumeration",
      "enum": ["produto", "estampa"],
      "default": "produto",
      "required": true
    },
    "ordem_exibicao": {
      "type": "integer",
      "default": 0
    },
    "ativo": {
      "type": "boolean",
      "default": true
    },
    "imagem_url": {
      "type": "string",
      "maxLength": 2000
    }
  }
}

